generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model MeetingMinute {
  id                   Int             @id @default(autoincrement())
  division             String
  title                String
  notes                String
  speaker              String?
  numberOfParticipants Int             @default(0)
  members              Json
  imageUrl             String?
  results              MeetingResult[] // relation
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  isDeleted            Boolean         @default(false)
}

model MeetingResult {
  id                   Int           @id @default(autoincrement())
  minuteId             Int
  minute               MeetingMinute @relation(fields: [minuteId], references: [id])
  target               String
  achievement          Int           @default(0)
  targetCompletionDate DateTime?
  description          String?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  isDeleted            Boolean       @default(false)

  @@index([minuteId])
}
